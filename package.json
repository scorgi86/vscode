{
    "name": "vscode-setup",
    "version": "0.1.0",
    "description": "В этом репозитории лежат конфигурационные файлы для работы в vscode",
    "scripts": {
        "postinstall": "npm run installGlobals && npm run init",
        "installGlobals": "npm install -g gulp husky mocha ts-node",
        "init": "husky init && rm -rf .husky/pre-commit && husky add .husky/pre-commit \"npm run precommit\"",
        "precommit": "npx lint-staged",
        "test": "mocha -r ts-node/register src/**/*.test.ts  --watch --watch-files *.test.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/scorgi86/vscode.git"
    },
    "keywords": [
        "vs code",
        "vscode",
        "vscode setut"
    ],
    "author": "Бут А.С",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/scorgi86/vscode/issues"
    },
    "homepage": "https://github.com/scorgi86/vscode#readme",
    "husky": {
        "pre-commit": "npx lint-staged",
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./src/**/*.ts": [
            "eslint --color --cache",
            ".bash/tsc-staged.sh"
        ]
    },
    "dependencies": {},
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@tensor-corp/eslint-config": "^2.0.7",
        "@types/chai": "^4.2.15",
        "@types/mocha": "^8.2.1",
        "@types/node": "^14.14.32",
        "@types/requirejs": "^2.1.32",
        "@types/sinon": "^9.0.11",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.16.1",
        "ava": "^3.15.0",
        "chai": "^4.3.3",
        "eslint": "^7.21.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-node": "^11.1.0",
        "lint-staged": "^10.5.3",
        "mocha": "^8.3.1",
        "nyc": "^15.1.0",
        "pinst": "^2.1.1",
        "prettier": "^2.2.1",
        "sinon": "^9.2.4",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3",
        "babel-core": "^6.26.3",
        "babel-preset-env": "^1.7.0",
        "gulp": "^4.0.0",
        "gulp-autoprefixer": "^3.1.0",
        "gulp-babel": "^7.0.1",
        "gulp-concat": "^2.6.0",
        "gulp-connect": "^5.7.0",
        "gulp-plumber": "^1.2.1",
        "gulp-pug": "^3.3.0",
        "gulp-stylus": "^2.7.0",
        "jeet": "^7.2.0",
        "rupture": "^0.6.1"
    }
}
