{
    "name": "vscode-setup",
    "version": "0.1.0",
    "description": "В этом репозитории лежат конфигурационные файлы для работы в vscode",
    "scripts": {
        "postinstall": "npm run init",
        "init": "npx husky init && rm -rf .husky/pre-commit && npx husky add .husky/pre-commit \"npm run precommit\" && npm run initWasabyCli",
        "initWasabyCli": "npm install -g wasaby-cli",
        "precommit": "npx lint-staged",
        "build": "npm run build:deps && npm run build:app",
        "build:deps": "wasaby-cli --tasks=initStore",
        "build:app": "wasaby-cli --tasks=build",
        "start": "wasaby-cli --tasks=startTest --server",
        "build:prepare": "wasaby-cli --tasks=prepare",
        "watcher": "wasaby-cli --tasks=build --watcher",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/scorgi86/vscode.git"
    },
    "keywords": [
        "vs code",
        "vscode",
        "vscode setut"
    ],
    "author": "Бут А.С",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/scorgi86/vscode/issues"
    },
    "homepage": "https://github.com/scorgi86/vscode#readme",
    "husky": {
        "pre-commit": "npx lint-staged",
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./src/**/*.ts": [
            "eslint --color --cache --fix",
            "tsc --pretty"
        ]
    },
    "dependencies": {},
    "devDependencies": {
        "@tensor-corp/eslint-config": "^2.0.7",
        "@types/node": "^14.14.32",
        "@types/requirejs": "^2.1.32",
        "@typescript-eslint/eslint-plugin": "^4.16.1",
        "@typescript-eslint/eslint-plugin-tslint": "^4.16.1",
        "@typescript-eslint/parser": "^4.16.1",
        "eslint": "^7.21.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "lint-staged": "^10.5.3",
        "pinst": "^2.1.1",
        "prettier": "^2.2.1",
        "typescript": "^4.2.3"
    }
}
